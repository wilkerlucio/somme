{
  "manifest_version": 2,
  "name": "Somme",
  "description": "Quick download links everywhere!",
  "version": "0.2",

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],

      "js": [
        "vendor/jquery-1.9.1.js",
        "lib/main.js"
      ]
    }
  ],

  "permissions": [
    "http://isohunt.com/*"
  ]
}
